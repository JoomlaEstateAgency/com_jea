{
	"name" : "joomla-estate-agency/com_jea",
	"type" : "project",
	"description" : "Joomla! real-estate component",
	"keywords" : [
		"joomla",
		"cms"
	],
	"homepage" : "https://github.com/JoomlaEstateAgency/com_jea",
	"license" : "GPL-2.0",
	"require" : {
		"php" : ">=8.0"
	},
	"require-dev" : {
		"squizlabs/php_codesniffer": "^3.5",
		"joomla/coding-standards": "~3.0@alpha"
	},
	"scripts" : {
		"release": "php scripts/release.php",
		"standard": "phpcs --extensions=php --standard=coding-standards .",
		"fix-standard": "phpcbf --extensions=php --standard=coding-standards ."
	},
	"scripts-descriptions": {
        "release": "Build a component release in a zip archive.",
        "standard": "Generate codestyle report using PHP_CodeSniffer.",
        "fix-standard": "Fix codestyle errors using PHP_CodeSniffer."
    }
}
